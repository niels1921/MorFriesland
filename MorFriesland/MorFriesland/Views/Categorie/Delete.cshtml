@model MorFriesland.Models.Categorie

@{
    ViewData["Title"] = "Verwijderen";
}


<h3>
    Weet u zeker dat u @Html.DisplayFor(model => model.Naam) wilt verwijderen?
</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-default meldingbutton" />
    </form>
</div>
