@model IEnumerable<MorFriesland.Models.Categorie>

@{
    ViewData["Title"] = "Categorieën";
}

<h2>Categorieën</h2>

<p>
    <a class="btn btn-default meldingbutton" asp-action="Create">Nieuwe categorie</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Naam)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Bewerk</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Bekijk</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
