@model MorFriesland.Models.AccountViewModels.AddRoleUserViewModel

@{
    ViewData["Title"] = "AddUserRole";
}

<h2>AddUserRole</h2>

<h4>Add Roles to Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <select asp-for="UserName" class="form-control" asp-items="ViewBag.UserName"></select>
                
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="Name" class="form-control" asp-items="ViewBag.Name"></select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Add Role" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

